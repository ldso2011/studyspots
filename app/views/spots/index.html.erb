<h1><%=t :spots %></h1>
<table>
  <tr>
    <th><%=t :spot %></th>
    <th style="width:20px"></th>
    <th style="width:20px"></th>
    <th style="width:20px"></th>
    <th style="width:20px"></th>
  </tr>
  <% @spots.each do |spot| %>
  <tr>
    <td><%= spot.local %></td>
    <td style="width:20px"><%= link_to image_tag('File_info16.png', :alt => t(:show)), spot %></td>
    <td style="width:20px"><%= link_to image_tag('File_edit16.png', :alt => t(:edit)), edit_spot_path(spot) %></td>
    <td style="width:20px"><%= link_to image_tag('File_delete16.png', :alt => t(:delete)), spot, confirm: 'Are you sure?', method: :delete %></td>
    <td style="width:20px"><%= link_to image_tag('Users16.png', :alt => t(:inspot)), spots_path + '/' + spot.spot_id + '/inspot' %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to t(:newspot), new_spot_path %>