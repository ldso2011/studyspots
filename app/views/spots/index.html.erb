<h1><%=t :spots %></h1>
<table>
  <tr>
    <th><%=t :spot %></th>
    <th style="width:20px"></th>
    <th style="width:20px"></th>
    <th style="width:20px"></th>
    <th style="width:20px"></th>
  </tr>
  <% @spots.each do |spot| %>
  <tr>
    <td><%= spot.local %></td>
    <td style="width:20px"><%= link_to 'Show', spot %></td>
    <td style="width:20px"><%= link_to 'Edit', edit_spot_path(spot) %></td>
    <td style="width:20px"><%= link_to 'Destroy', spot, confirm: 'Are you sure?', method: :delete %></td>
    <td style="width:20px"><%= link_to 'Inspot', spots_path + '/' + spot.spot_id + '/inspot' %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to t(:newspot), new_spot_path %>