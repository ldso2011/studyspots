<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty">
  <tr>
    <th><%= t(:course) %></th>
    <th><%= sortable "acronym", t(:acronym) %></th>
    <th><%= sortable "name", t(:name) %></th>
    <th><%= sortable "code", t(:discipline_code) %></th>
    <th><%= sortable "semester", t(:discipline_semester) %></th>
    <th colspan="3"><%= t(:options) %></th>
  </tr>

<% @disciplines.each do |discipline| %>
  <tr>
    <td><%= discipline.course.acronym %></td>
    <td><%= discipline.acronym %></td>
    <td><%= discipline.name %></td>
    <td><%= discipline.code %></td>
    <td><%= discipline.semester %></td>
    <td style="width:16px"><%= link_to image_tag('File_info16.png', :alt => t(:show)), discipline %></td>
    <td style="width:16px"><%= link_to image_tag('File_edit16.png', :alt => t(:edit)), edit_discipline_path(discipline) %></td>
    <td style="width:16px"><%= link_to image_tag('File_delete16.png', :alt => t(:destroy)), discipline, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @courses %>
<br />
