<h1><%= t(:discipline_list) %></h1>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty">
  <tr>
    <th><%= sortable t(:acronym) %></th>
    <th><%= sortable t(:discipline) %></th>
    <th><%= "Spots" %></th>
    <th colspan="2"><%= t(:options) %></th>
  </tr>

<% @userdisciplines.each do |userdiscipline| %>
  <tr>
    <td><%= link_to userdiscipline.discipline.acronym, "disciplines/" + userdiscipline.discipline_id + "/spots" %></td>
    <td><%= userdiscipline.discipline.name %></td>
    <td><%= Spot.count(:conditions => "discipline_id = '"+ userdiscipline.discipline_id + "'") %></td>
    <td style="width:16px"><%= link_to image_tag('File_delete16.png', :alt => t(:show), :title => t(:show)), "disciplines/" + userdiscipline.discipline_id + "/show", method: :show %></td>
    <td style="width:16px"><%= link_to image_tag('File_delete16.png', :alt => t(:destroy), :title => t(:destroy)), "disciplines/" + userdiscipline.user_disciplines_id + "/delete", confirm: 'Are you sure?', method: :delete %></td>
    <td style="width:16px"><%= link_to image_tag('File_delete16.png', :alt => t(:spots), :title => t(:spots)), "disciplines/" + userdiscipline.discipline_id + "/spots" %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @userdisciplines %>
<br />

<%= link_to t(:discipline_new), new_users_discipline_path %>
